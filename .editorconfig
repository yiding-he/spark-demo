root = true

[*.{txt,java,xml,md,properties,scala}]
charset = utf-8
indent_style = space
end_of_line = lf

[*.{txt,java,xml,scala}]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
ij_formatter_tags_enabled = true

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

[*.java]
ij_java_blank_lines_around_field = 1
ij_java_blank_lines_after_class_header = 1
ij_java_doc_add_blank_line_after_return = true
ij_java_doc_add_blank_line_after_param_comments = true
ij_java_doc_add_blank_line_after_description = true
ij_java_doc_keep_empty_parameter_tag = false
ij_java_doc_keep_empty_return_tag = false
ij_java_doc_keep_empty_throws_tag = false

[*.scala]
ij_scala_align_group_field_declarations = true
ij_scala_align_tuple_elements = true
ij_scala_align_multiline_parameters = false
ij_scala_align_in_columns_case_branch = true
ij_scala_align_multiline_parameters_in_calls = false
ij_scala_blank_lines_around_class = 0
ij_scala_blank_lines_before_imports = 0
ij_scala_blank_lines_after_imports = 0
ij_scala_blank_lines_around_method_in_inner_scopes = 0
ij_scala_blank_lines_around_method = 0
ij_scala_blank_lines_around_field = 0

[*.properties]
ij_properties_keep_blank_lines = true
ij_properties_spaces_around_key_value_delimiter = true

